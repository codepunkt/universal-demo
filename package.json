{
  "name": "universal-demo",
  "description": "A boilerplate showing how to achieve Universal Code-Splitting and HMR with external CSS",
  "version": "1.0.0",
  "main": "server/index.js",
  "author": "Christoph Werner <christoph@codepunkt.de>",
  "license": "MIT",
  "scripts": {
    "start": "npm run clean && NODE_ENV=development babel-node src/server/index.js",
    "start:prod": "npm run clean && NODE_ENV=production node src/server/index.js",
    "build": "npm run clean && npm run build:server && npm run build:client && npm run build:node",
    "build:client": "NODE_ENV=production webpack --progress --display-entrypoints --config internal/webpack/client.prod.js",
    "build:server": "NODE_ENV=production webpack --progress --config internal/webpack/server.prod.js",
    "build:node": "NODE_ENV=production babel src/server/index.js -o dist/server/index.js",
    "serve": "NODE_ENV=production node dist/server/index.js",
    "analyze": "webpack-bundle-analyzer dist/client/stats.json",
    "clean": "rm -rf dist",
    "cm": "git-cz"
  },
  "dependencies": {
    "babel-polyfill": "^6.23.0",
    "compression": "^1.7.0",
    "cookie-parser": "^1.4.3",
    "emotion": "^7.0.13",
    "express": "^4.15.2",
    "express-no-favicons": "^0.0.1",
    "history": "^4.6.3",
    "ramda": "^0.24.1",
    "react": "^16.0.0-beta.5",
    "react-dom": "^16.0.0-beta.5",
    "react-redux": "^5.0.6",
    "react-universal-component": "^2.3.0",
    "recompose": "^0.24.0",
    "redux": "^3.7.2",
    "redux-devtools-extension": "^2.13.2",
    "redux-first-router": "^1.9.13",
    "redux-first-router-link": "^1.1.3",
    "reselect": "^3.0.1",
    "transition-group": "0.0.1",
    "webpack-flush-chunks": "^1.1.17"
  },
  "devDependencies": {
    "autodll-webpack-plugin": "^0.2.1",
    "babel-cli": "^6.24.0",
    "babel-core": "^6.24.0",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^6.4.0",
    "babel-plugin-ramda": "^1.3.0",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-es2015-classes": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-plugin-universal-import": "^1.2.5",
    "babel-preset-env": "^1.6.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.23.0",
    "babili-webpack-plugin": "^0.1.2",
    "commitizen": "^2.9.6",
    "css-loader": "^0.28.4",
    "cz-conventional-changelog": "^2.0.0",
    "eslint": "^3.19.0",
    "eslint-plugin-react": "^7.1.0",
    "extract-css-chunks-webpack-plugin": "^2.0.16",
    "husky": "^0.13.2",
    "prettier": "^1.5.3",
    "react-hot-loader": "next",
    "style-loader": "^0.18.2",
    "travis-github-status": "^1.4.0",
    "webpack": "^3.5.1",
    "webpack-bundle-analyzer": "^2.9.0",
    "webpack-dev-middleware": "^1.11.0",
    "webpack-hot-middleware": "^2.17.1",
    "webpack-hot-server-middleware": "^0.1.0",
    "webpack-node-externals": "^1.6.0",
    "write-file-webpack-plugin": "^4.1.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
